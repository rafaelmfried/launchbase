<div class="item">
    <div>Avatar URL</div>
    <div>
        <input
            type="url"
            name="avatar_url"
            placeholder="http://"
            value="{{ teacher.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome completo</div>
    <div>
        <input
            type="text"
            name="name"
            placeholder="Nome do Professor"
            value="{{ teacher.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth"
            value="{{ teacher.birth }}"
        >

    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="education_level" value="{{ teacher.education_level }}">
            <option 
                {% if teacher.education_level == 'high_school' %}
                    selected
                {% endif %}
                value="high_school"
            > Ensino Médio Completo</option>
            <option 
                {% if teacher.education_level == 'degree' %}
                    selected
                {% endif %}
                value="degree"
            > Ensino Superior Completo</option>
            <option 
                {% if teacher.education_level == 'masters' %}
                    selected
                {% endif %}
                value="masters"
            > Mestrado</option>
            <option 
                {% if teacher.education_level == 'phd' %}
                    selected
                {% endif %}
                value="phd"
            > Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input
                type="radio" 
                name="class_type"
                value="distance"
                {% if teacher.class_type == 'distance' %}
                    checked
                {% endif %}
            >
            À distância
        </span>
        
        <span>
            <input
                type="radio" 
                name="class_type"
                value="presential"
                {% if teacher.class_type == 'presential' %}
                    checked
                {% endif %}
            >
            Presencial
        </span>

    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input 
            type="text" 
            name="teacher_skills"
            placeholder="Separe as áreas de atuação por virgula"
            value="{{ teacher.skills }}"
        >
    </div>
</div>

<button type="submit">Cadastrar</button>