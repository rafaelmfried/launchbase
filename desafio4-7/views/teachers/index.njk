{% extends "layout.njk" %}

{% block head %}
    <title>Desafio 4-7 - Teachers Index</title>
{% endblock %}

{% block content %}
<div class="card table-container">
    
    <a href="/teachers/create">Novo</a>
    
    <table>
        <thead>
            <th>Nome Completo</th>
            <th>Acompanhamento</th>
            <th>Ação</th>
        </thead>
        <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{teacher.avatar_url}}"></span>
                            {{teacher.name}}
                        </td>
                        <td>
                            {% for skill in teacher.skills %}
                                <span>{{skill}}</span>
                            {% endfor %}
                        </td>
                        <td><a href="/teachers/{{teacher.id}}">ver</a></td>
                    </tr>
                {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}

