{% extends "layout.njk" %}

{% block head %}
    <title>Desafio 4-7 - Teacher Edit</title>
{% endblock %}

{% block content %}
    
    <div class="card">
        <section 
            class="avatar" 
            style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">

        </section>
        
        <section class="details">
            <form method="POST" action="/teachers?_method=PUT">
                <h3>Editar Professor</h3>

                <div class="teachers_info">
                    {% include 'teachers/fields.njk' %}
                </div>

                <input 
                    type="hidden" 
                    name="id" 
                    value={{teacher.id}}
                >
            </form>
        </section>
    </div>
{% endblock %}

