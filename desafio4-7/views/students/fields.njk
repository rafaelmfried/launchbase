<div class="item">
    <div>Avatar URL</div>
    <div>
        <input
            type="url"
            name="avatar_url"
            placeholder="http://"
            value="{{ student.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome completo</div>
    <div>
        <input
            type="text"
            name="name"
            placeholder="Nome do Aluno"
            value="{{ student.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth"
            value="{{ student.birth }}"
        >

    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input 
            type="email" 
            name="email"
            value="{{ student.email }}"
        >
    </div>
</div>

<div class="item">
    <div>Ano Escolar</div>
    <div>
       <select name="school_year">
            <option value="5EF" {% if student.school_year == "5EF" %} selected {% endif %}>
               5 ano - ensino fundamental
            </option>
            <option value="6EF" {% if student.school_year == "6EF" %} selected {% endif %}>
               6 ano - ensino fundamental
            </option>
            <option value="7EF" {% if student.school_year == "7EF" %} selected {% endif %}>
                7 ano - ensino fundamental
            </option>
            <option value="8EF" {% if student.school_year == "8EF" %} selected {% endif %}>
                8 ano - ensino fundamental
            </option>
            <option value="9EF" {% if student.school_year == "9EF" %} selected {% endif %}>
                9 ano - ensino fundamental
            </option>
            <option value="1EM" {% if student.school_year == "1EM" %} selected {% endif %}>
                1 ano - ensino medio
            </option>
            <option value="2EM" {% if student.school_year == "2EM" %} selected {% endif %}>
                2 ano - ensino medio
            </option>
            <option value="3EM" {% if student.school_year == "3EM" %} selected {% endif %}>
                3 ano - ensino medio
            </option>
       </select>
    </div>
</div>

<div class="item">
    <div>Carga Hor√°ria Semanal</div>
    <div>
        <input 
            type="number" 
            name="workload"
            value="{{ student.workload }}"
