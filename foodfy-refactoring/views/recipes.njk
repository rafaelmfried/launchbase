{% extends 'layout.njk' %}

{% block head %}
    <title>Receitas Foodfy</title>
{% endblock %}

{% block nav%}            
    <nav>
        <a href="/sobre">Sobre</a>
        <a href="/receitas" style="font-weight: bold;">Receitas</a>
    </nav>
{% endblock %}

{% block content %}    
    <main class="main_recipes">

        <section class="recipes_cards">
            
            {% for recipe in recipes %}
                <div class="recipe_card">
                    <div class="recipe_card_image-container"><img src="{{recipe.image}}"></div>
                    
                    <p class="recipe_card_title">{{recipe.title}}</p>

                    <p class="recipe_card_author">{{recipe.author}}</p>
                </div>
            {% endfor %}
        </section>
        
    </main>
{% endblock %}

{% block script %}
    <script src="/javascript/scripts.js"></script>
{% endblock %}