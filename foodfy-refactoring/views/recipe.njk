{% extends 'layout.njk' %}

{% block head %}
    <title>Receita Foodfy</title>
{% endblock %}

{% block nav %}
    <nav>
        <a href="/sobre">Sobre</a>
        <a href="/receitas" style="font-weight: bold;">Receitas</a>
    </nav>
{% endblock %}

{% block content %}
    <main class="main_recipe_page">

        <div class="billboard_image_container">
            <img src="{{recipe.image}}" alt="{{recipe.title}}">
        </div>

        <div class="info">
            <h1>{{recipe.title}}</h1>
            <p>{{recipe.author}}</p>
        </div>
        
        <section>
            <div class="section">

                <div class="section_head">
                    <h2>Ingredientes</h2>
                    <a class="hide_content"></a>
                </div>

                <div class="section_content">
                    <ul>
                        {% for ingredient in recipe.ingredients %}
                            <li>{{ingredient}}</li>
                        {% endfor %}
                    </ul>
                </div>

            </div>

            <div class="section">

                <div class="section_head">
                    <h2>Modo de preparo</h2>
                    <a class="hide_content"></a>
                </div>

                <div class="section_content">
                    <ul>
                        {% for preparation_step in recipe.preparation %}
                            <li>{{preparation_step}}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div class="section">

                <div class="section_head">
                    <h2>Informações adicionais</h2>
                    <a class="hide_content"></a>
                </div>

                <div class="section_content">
                    <p>{{recipe.information}}</p>
                </div>
            </div>
        </section>

    </main>
{% endblock %}

{% block script %}
    <script src="/javascript/scripts.js"></script>
{% endblock %}