{% extends "layout.njk" %}

{% block head %}

    <title>Desafio 3-1 - Conteúdos</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock %}

{% block nav %}
    <nav>
        <a href="/"><img src="/assets/logo.svg" alt="RocketSeat"></a>
        <a href="/about">Sobre</a>
        <a href="/" style="font-weight: bold; color: aqua;">Conteúdos</a>
    </nav>
{% endblock %}

{% block content %}

    <main id="conteudos">
        <section class="cards">

            {% for course in courses %}
                <div class="card" id="{{course.id}}">

                    <span>{{course.number}}</span>

                    <div class="card__image-container">
                        <img src="{{course.img_url}}" alt="{{course.id}}">
                    </div>

                    <div class="card__content">
                        <div class="card__description">
                            <p>
                                <p class="starter__highlight">{{course.descriptionHighlight}}</p>
                                {{course.description}}</p>
                        </div>
                        <div class="card__info">
                            <p>{{course.price}}</p>
                            <p>{{course.modules}}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </section>
    </main>

    <div class="modal-overlay">

        <div class="modal">

            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>

            <a class="maximaze-modal">
                <i class="material-icons">fullscreen</i>
            </a>

            <a class="minimaze-modal">
                <i class="material-icons">fullscreen_exit</i>
            </a>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>

        </div>

    </div>

    <script src="/javascript/script.js"></script>

{% endblock %}