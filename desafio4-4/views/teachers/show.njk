{% extends "layout.njk" %}

{% block head %}
    <title>Desafio 4-4 - Teacher Show</title>
{% endblock %}

{% block content %}
<div class="card">
    
    <section 
        class="avatar" 
        style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">

    </section>
    
    <section class="details">

        <h3>Detalhes</h3>

        <div class="teachers_info">

            <div class="item">
                <div>Nome completo</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{ teacher.education_level }}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>{{ teacher.class_type }}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for skill in teacher.skills %}
                        <span>{{ skill }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>

        </div>

        <a href="{{ teacher.id }}/edit" class="button">Editar</a>

    </section>

</div>
{% endblock %}

